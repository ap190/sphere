<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:typeface">serif</item>
    <item name="colorControlActivated">@color/teal</item>
    <item name="colorControlHighlight">@color/teal</item>
    <!-- Only supported by API Level > 21 -->
    <item name="android:statusBarColor">@color/teal</item>
    <!-- Default status bar color -->
    <item name="colorPrimaryDark">@color/teal</item>
  </style>

  <style name="Theme.Splash" parent="android:Theme">
      <item name="android:windowBackground">@drawable/splash_centered</item>
      <item name="android:windowNoTitle">true</item>
  </style>

  <!-- Style for thumbnail views -->
  <style name="ThumbnailImageView">
    <item name="android:layout_width">115dp</item>
    <item name="android:layout_height">115dp</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:background">@color/light_grey</item>
  </style>

</resources>
